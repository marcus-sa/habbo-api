{
  "private": true,
  "name": "vulture",
  "version": "0.0.1",
  "description": "Headless Habbo CMS supporting all emulators",
  "author": "Marcus S. Abildskov <marcussa2000@gmail.com>",
  "license": "MIT",
  "scripts": {
    "setup": "ts-node setup.ts",
    "precommit": "lint-staged",
    "format": "prettier **/**/*.{js,ts} --write && git status",
    "start": "nodemon",
    "build": "rm -rf dist && tsc",
    "serve": "node dist/main.js",
    "test": "jest",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "5.2.2",
    "@nestjs/core": "5.2.2",
    "@nestjs/jwt": "^0.1.1",
    "@nestjs/passport": "^1.1.0",
    "@nestjs/swagger": "^2.4.5",
    "@nestjs/typeorm": "^5.2.0",
    "fastify-formbody": "^2.0.0",
    "mysql": "^2.16.0",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typeorm": "^0.2.7"
  },
  "devDependencies": {
    "@nestjs/testing": "^5.0.0",
    "@types/express": "^4.0.39",
    "@types/fs-extra": "^5.0.4",
    "@types/inquirer": "^0.0.43",
    "@types/jest": "^21.1.8",
    "@types/node": "^10.9.2",
    "@types/supertest": "^2.0.4",
    "fs-extra": "^7.0.0",
    "inquirer": "^6.2.0",
    "jest": "^21.2.1",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.14.1",
    "password-generator": "^2.2.0",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "^21.2.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "typescript": "3.0.1",
    "yaml": "^1.0.0-rc.8"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,json}": [
      "yarn format",
      "git add"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
